<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alarmLayout"
        android:background="@color/lightCreamColor">

        <TextView
            android:id="@+id/alarmTimeTextView"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@color/greenColor"
            android:textSize="25sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/redLightColor" />

        <LinearLayout
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alarmRepeatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/redLightColor"
                android:fontFamily="@font/fredoka_one"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/alarmLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp" />



        </LinearLayout>

        <Switch
            android:id="@+id/alarmSwitch"
            android:layout_weight="15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:textOff="@string/off"
            android:textOn="@string/on"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
