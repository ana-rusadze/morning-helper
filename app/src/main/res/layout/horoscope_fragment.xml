<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_rectangle_bg"
    tools:context=".ui.dashboard_activity.fragments.daily_horoscope.HoroscopeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <EditText
                    android:id="@+id/searchSignET"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:background="@color/creamColor"
                    android:hint="@string/search_your_sign_here"
                    android:padding="10dp"
                    android:textColorHint="@color/greenColor" />

                <include layout="@layout/loader_layout" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <Button
                    android:id="@+id/readHoroscopeBT"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:textAllCaps="false"
                    android:background="@color/greenColor"
                    android:fontFamily="@font/fredoka_one"
                    android:padding="10dp"
                    android:text="@string/your_daily_horoscope"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:elevation="10dp"
                android:visibility="invisible"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/horoscopeDescriptionTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/yellowColor"
                    android:fontFamily="@font/fredoka_one"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </FrameLayout>


</ScrollView>