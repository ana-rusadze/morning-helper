<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenColor"
    android:orientation="vertical"
    tools:context=".ui.dashboard_activity.fragments.notes.activity.CreateNoteActivity">

    <include layout="@layout/toolbar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/titleET"
            android:layout_marginBottom="10dp"
            style="@style/createNoteEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:drawableStart="@mipmap/ic_label"
            android:drawablePadding="10dp"
            android:hint="@string/title" />

        <EditText
            android:id="@+id/descriptionET"
            style="@style/createNoteEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_margin="20dp"
            android:gravity="start"
            android:hint="@string/description" />

    </LinearLayout>


    <include
        android:id="@+id/bottomSheetLayoutReminder"
        layout="@layout/chooser_dialog_layout" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>